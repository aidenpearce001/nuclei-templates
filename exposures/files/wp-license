id: wp-license

info:
  name: WordPress License File Discloser
  author: yashgoti
  severity: info
  description: Wordpress default license file discloser to identify wordpress is running

requests:
  - method: GET
    path:
      - "{{BaseURL}}/license.txt"

    matchers-condition: and
    matchers:
      - type: word
        words:
          - "WordPress"
          - " - "
          - "Web publishing software"
        condition: and

      - type: word
        words:
          - "text/plain"
        part: header

      - type: status
        status:
          - 200
